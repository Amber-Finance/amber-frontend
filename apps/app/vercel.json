{
  "version": 2,
  "name": "amber-finance-app",
  "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && cd apps/app && pnpm build",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "rootDirectory": "apps/app",
  "domains": ["app.amberfi.io"],
  "functions": {
    "**": {
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
