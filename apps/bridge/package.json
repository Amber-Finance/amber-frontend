{
  "name": "@amber-finance/bridge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "copy-public": "cpx \"../../packages/shared-assets/**\" \"./public/\"",
    "build": "npm run copy-public && next build",
    "chains:generate": "node ./src/scripts/generate-chains.cjs",
    "dev": "npm run copy-public && next dev -p 3003",
    "dev:https": "next dev --experimental-https -p 3003",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "patch-package && run-s chains:*",
    "start": "next start",
    "test": "node --experimental-vm-modules --no-warnings ./node_modules/.bin/jest",
    "test:e2e": "playwright test transactions.spec.ts --project=chromium",
    "test:e2e-1": "playwright test 1nobleUSDCToInjectiveINJ.spec.ts --project=chromium",
    "test:e2e-2": "playwright test 2injectiveINJToCosmoshubATOM.spec.ts --project=chromium",
    "test:e2e-3": "playwright test 3cosmoshubAtomToNobleUSDC.spec.ts --project=chromium",
    "visdeps": "bash ./src/scripts/visdeps.sh",
    "update-registries": "npx npm-check-updates chain-registry @initia/initia-registry -u && npm i && npm run chains:generate",
    "update-skip-go": "npx npm-check-updates @skip-go/widget -u && npm i",
    "update-all": "npm run update-registries && npm run update-skip-go"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.17.10",
    "@radix-ui/react-icons": "^1.3.2",
    "@skip-go/widget": "^3.14.7",
    "@tailwindcss/forms": "^0.5.7",
    "@tanstack/react-query": "^5.18.1",
    "@types/node": "^20.11.16",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vercel/edge": "^1.2.2",
    "@vercel/edge-config": "^0.4.1",
    "autoprefixer": "^10.4.17",
    "@initia/initia-registry": "^1.0.6",
    "chain-registry": "^2.0.42",
    "clsx": "^2.1.0",
    "axios": "^1.10.0",
    "download": "^8.0.0",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "next": "^15.2.3",
    "postcss": "^8.4.47",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "viem": "^2.31.0",
    "wagmi": "^2.16.8",
    "@keplr-wallet/types": "^0.12.251",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/eslint-plugin-query": "^5.18.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/download": "^8.0.5",
    "@types/jest": "^29.5.12",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "dependency-cruiser": "^16.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all2": "^6.1.2",
    "patch-package": "^8.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^4.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "undici": "^6.21.3",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
