{
  "name": "@amber-finance/bridge",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "copy-public": "cpx \"../../packages/shared-assets/**\" \"./public/\"",
    "build": "npm run copy-public && next build",
    "chains:generate": "node ./src/scripts/generate-chains.cjs",
    "dev": "npm run copy-public && next dev -p 3003",
    "dev:https": "next dev --experimental-https -p 3003",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "patch-package && run-s chains:*",
    "start": "next start",
    "visdeps": "bash ./src/scripts/visdeps.sh",
    "update-registries": "npx npm-check-updates chain-registry @initia/initia-registry -u && npm i && npm run chains:generate",
    "update-skip-go": "npx npm-check-updates @skip-go/widget -u && npm i",
    "update-all": "npm run update-registries && npm run update-skip-go"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.23.7",
    "@radix-ui/react-icons": "^1.3.2",
    "@skip-go/widget": "^3.14.10",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query": "^5.87.4",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vercel/edge": "^1.2.2",
    "@vercel/edge-config": "^1.4.0",
    "autoprefixer": "^10.4.21",
    "@initia/initia-registry": "^1.0.6",
    "chain-registry": "^2.0.58",
    "clsx": "^2.1.1",
    "axios": "^1.11.0",
    "download": "^8.0.0",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.12",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "viem": "^2.37.5",
    "wagmi": "^2.16.9",
    "@keplr-wallet/types": "^0.12.271",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.7"
  },
  "overrides": {
    "chalk": "5.3.0",
    "strip-ansi": "7.1.0",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2",
    "has-ansi": "5.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/eslint-plugin-query": "^5.86.0",
    "@types/download": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-run-all2": "^8.0.4",
    "patch-package": "^8.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
