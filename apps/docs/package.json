{
  "name": "@amber-finance/docs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "copy-public": "cpx \"../../packages/shared-assets/**\" \"./public/\"",
    "generate-brand-kit": "node scripts/generate-brand-kit-zip.js",
    "prebuild": "npm run copy-public && npm run generate-brand-kit",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind && cp -r ./public/_pagefind ./out",
    "dev": "next dev --port 3002 --webpack",
    "build": "next build --webpack && npm run postbuild",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cosmjs/stargate": "^0.36.0",
    "@cosmos-kit/cosmostation": "^2.15.3",
    "@cosmos-kit/keplr": "^2.15.3",
    "@cosmos-kit/leap": "^2.15.3",
    "@cosmos-kit/okxwallet": "^2.12.3",
    "@cosmos-kit/react": "^2.22.3",
    "@cosmos-kit/vectis": "^2.14.3",
    "@cosmos-kit/xdefi": "^2.12.0",
    "@interchain-ui/react": "^1.26.3",
    "@vercel/analytics": "^1.5.0",
    "archiver": "^7.0.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "nextra": "^4.4.0",
    "nextra-theme-docs": "^4.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "pagefind": "^1.0.0",
    "postcss": "^8",
    "tailwindcss": "^4.1.12",
    "typescript": "^5"
  }
}
