{
  "name": "@amber-finance/docs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "copy-public": "cpx \"../../packages/shared-assets/**\" \"./public/\"",
    "generate-brand-kit": "node scripts/generate-brand-kit-zip.js",
    "prebuild": "npm run copy-public && npm run generate-brand-kit",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind && cp -r ./public/_pagefind ./out",
    "dev": "next dev --port 3002",
    "build": "next build && npm run postbuild",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cosmjs/stargate": "^0.37.0",
    "@cosmos-kit/cosmostation": "^2.15.8",
    "@cosmos-kit/keplr": "^2.15.9",
    "@cosmos-kit/leap": "^2.15.8",
    "@cosmos-kit/okxwallet": "^2.12.7",
    "@cosmos-kit/react": "^2.22.7",
    "@cosmos-kit/vectis": "^2.14.7",
    "@cosmos-kit/xdefi": "^2.12.0",
    "@interchain-ui/react": "^1.26.3",
    "@vercel/analytics": "^1.6.1",
    "archiver": "^7.0.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "motion": "^12.23.25",
    "next": "15.1.9",
    "next-themes": "^0.4.6",
    "nextra": "^4.6.0",
    "nextra-theme-docs": "^4.6.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.0.7",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "eslint-plugin-react-hooks": "^7.0.1",
    "pagefind": "^1.0.0",
    "postcss": "^8",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  }
}
