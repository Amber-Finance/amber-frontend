{
  "name": "amber-finance-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml}\""
  },
  "dependencies": {
    "next": "16.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24",
    "cpx": "^1.5.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@amber-finance/bridge>react": "18.3.1",
      "@amber-finance/bridge>react-dom": "18.3.1",
      "husky": "workspace:packages/husky-shim"
    }
  }
}
