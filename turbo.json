{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "copy-public": {
      "cache": false,
      "outputs": ["public/**"]
    },
    "build": {
      "dependsOn": ["copy-public"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["POLKACHU_USER", "POLKACHU_PASSWORD", "APP_URL", "EDGE_CONFIG"]
    },
    "dev": {
      "dependsOn": ["copy-public"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {},
    "clean": {
      "cache": false
    }
  }
}
